<p id="notice"><%%= notice %></p>

<h1 class="w3-panel w3-blue"> <%= plural_table_name.titleize %></h1>

<table class="w3-table-all">
  <thead>
    <tr class="w3-light-grey w3-hover-green">
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
      <tr>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td class="w3-light-grey w3-hover-yellow"><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
        <td><%%= link_to 'Show', <%= singular_table_name %> , class:"w3-button w3-orange w3-round-xlarge" %></td>
        <td><%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>) , class:"w3-button w3-orange w3-round-xlarge" %></td>
        <td><%%= link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-orange w3-round-xlarge" %></td>
      </tr>
    <%% end %>
  </tbody>
</table>

<br>

