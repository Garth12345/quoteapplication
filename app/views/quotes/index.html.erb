<p id="notice"><%= notice %></p>

<h1 class="w3-panel w3-blue">Quotes</h1>

<table class="w3-table-all">
  <thead>
    <tr class="w3-light-grey w3-hover-green">
      <th class="w3-light-grey w3-hover-pink">Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td class="w3-light-grey w3-hover-yellow"><%= quote.name %></td>
        <td class="w3-light-grey w3-hover-yellow"><%= quote.content %></td>
        <td><%= link_to 'Show', quote , class:"w3-button w3-orange w3-round-xlarge" %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) , class:"w3-button w3-orange w3-round-xlarge" %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } , class:"w3-button w3-orange w3-round-xlarge" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path , class:"w3-button w3-blue w3-round-xlarge" %>
